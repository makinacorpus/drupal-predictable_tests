class PredicableUnitTest extends DrupalUnitTestCase {
  public static function getInfo() {
    return array(
      'name' => 'Unit test that always passes',
      'description' => 'Asserts that TRUE is true. Use this test when you ' .
                       'need a quick test that passes. Useful to validate ' .
                       'your test workflow. NOTE: as a DrupalUnitTestCase, ' .
                       'does not requires access to the database nor files.',
      'group' => 'PredicableTests',
    );
  }

  public function testThatAlwaysPasses() {
    $this->assertTrue(TRUE);
  }
}


